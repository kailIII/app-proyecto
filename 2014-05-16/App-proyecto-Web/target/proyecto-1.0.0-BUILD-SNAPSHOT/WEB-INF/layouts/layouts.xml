<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<!--
	    Archivo que define el template de la aplicacion, en este caso es el template default. 
	    Los atributos son trechos definidos en el template para sustituirlos, 
	    en nuestro caso el propio template define el valor.
	-->
	<definition name="default" template="/WEB-INF/layouts/template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/fragmentos/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/views/fragmentos/menu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/fragmentos/footer.jsp" />
	</definition>

</tiles-definitions>

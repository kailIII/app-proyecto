<tiles-definitions>

    <!--
    	Arquivo que define no tiles quais sao as paginas, e quais templates cada uma utiliza.
    	Repare que em nossa aplicacao, o unico atributo sobreescrito pelas paginas eh o body.
    -->
    
	<definition extends="default" name="listaProductos">
		<put-attribute name="body" value="/WEB-INF/views/producto/mantener/listaProductos.jsp" />
	</definition>
	
	<definition extends="default" name="incluirProducto">
		<put-attribute name="body" value="/WEB-INF/views/producto/mantener/incluirProducto.jsp" />
	</definition>
	
	<definition extends="default" name="editarProducto">
		<put-attribute name="body" value="/WEB-INF/views/producto/mantener/editarProducto.jsp" />
	</definition>
	
	<definition extends="default" name="errorPage">
		<put-attribute name="body" value="/WEB-INF/views/errorPage.jsp" />
	</definition>
	
	<definition extends="default" name="sobre">
		<put-attribute name="body" value="/WEB-INF/views/sobre.jsp" />
	</definition>

</tiles-definitions>
